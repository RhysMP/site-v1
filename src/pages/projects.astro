---
import Layout from "../layouts/Layout.astro";
import { Image } from 'astro:assets';

const projectBlacklist = ["gallery", "phthallo", "ascend-website"]
const response = await fetch("https://api.github.com/users/phthallo/repos?per_page=50", 
	{ headers: {
			"Accept": "application/vnd.github+json",
			"Authorization": "Bearer " + import.meta.env.GITHUB_PAT,
			"X-GitHub-Api-Version": "2022-11-28"
	}}
).then(r => r.json())

const projects = response.filter(project => !project.fork && project.stargazers_count != 0 && !projectBlacklist.includes(project.name))
	.sort((a, b) => {
      if (a.stargazers_count > b.stargazers_count) return -1
      else if (a.stargazers_count < b.stargazers_count) return 1
      return 0
    })

const images = import.meta.glob<{ default: ImageMetadata }>('/src/assets/projects/*.{jpeg,jpg,png,gif}')
---

<Layout title="projects">
    <main>
        <h2>my projects</h2>
		<div class = "flex flex-col gap-4">
				{projects.map((project) => (
				<div class="relative flex flex-col overflow-auto rounded-lg bg-white/20 dark:bg-palette-900 border border-black/20 dark:border-white/20">
					{images["/src/assets/projects/" + project.name.toLowerCase() + ".jpg"] ? <Image src = {images["/src/assets/projects/" + project.name.toLowerCase() + ".jpg"]()} alt={project.description} class="w-full h-36 object-cover" /> : ""}
					<div class = "p-4 h-full flex flex-col">
						<a class="no-underline text-sm sm:text-base transition-all duration-300 font-bold hover:bg-transparent group flex flex-row justify-between" href = {`${project.homepage ? project.homepage : project.html_url}`}>
							{project.name} 
							<span class = "flex flex-row gap-2 items-center group-hover:text-palette-900 transition-all duration-300">
								{project.stargazers_count}
								<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-4">
									<path stroke-linecap="round" stroke-linejoin="round" d="M11.48 3.499a.562.562 0 0 1 1.04 0l2.125 5.111a.563.563 0 0 0 .475.345l5.518.442c.499.04.701.663.321.988l-4.204 3.602a.563.563 0 0 0-.182.557l1.285 5.385a.562.562 0 0 1-.84.61l-4.725-2.885a.562.562 0 0 0-.586 0L6.982 20.54a.562.562 0 0 1-.84-.61l1.285-5.386a.562.562 0 0 0-.182-.557l-4.204-3.602a.562.562 0 0 1 .321-.988l5.518-.442a.563.563 0 0 0 .475-.345L11.48 3.5Z" />
								</svg>
							</span>
						</a>
						<div class="grow">
							<p>{project.description}</p>
						</div>

						<div class = "flex flex-row justify-between items-center">
							<span class="text-sm w-max sm:text-base transition-all duration-300 my-1 ml-0 mr-2 flex max-h-8 rounded-lg bg-light-200 text-palette-900 dark:bg-palette-600 p-1 dark:text-palette-900 font-bold flex-row items-center gap-1">
								<i class={project.language.toLowerCase()}/>{project.language}
							</span>
							<a class = "icon float-left p-2 rounded-sm border dark:border-white/20 border-black/20 " href={project.html_url} aria-label={`Visit the GitHub repository for ${project.name}`}><i class="github mr-2"></i>view source</a>
					</div>

					</div>
				</div>
				))}


		<p>you may also wish to view my occassional contributions to <a href = "https://github.com/pulls?q=is%3Apr+author%3Aphthallo+archived%3Afalse+">other open-source repositories</a>.</p>
    </main>
</Layout>
