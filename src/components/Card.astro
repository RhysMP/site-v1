---
interface Props {
	name: string;
	url: string;
	repo: string;
	description: string;
	tools: Array<any>;
}

const { name, url, repo, description, tools } = Astro.props;
---

<div class = "card"> 
	<b>{name}</b>
	<div style = "float:right">
		<a href = {repo}><i class="fa-brands fa-github"></i></a>
		<a href = {url}><i class="fa-solid fa-sm fa-arrow-up-right-from-square"></i></a>
	</div>


	<div style = "height:55%;">
	<p>{description}</p>
	</div>

	<div style = "margin-top: auto; bottom:1em;">
		{tools.map((tools) => (
			<span class = "pill"><i class = {tools.icon}></i>{tools.name}</span> 
	  	))}
		</div>
</div>