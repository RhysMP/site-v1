---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";
interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <title>{title} - annabel</title>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0, resizes-content" />
        <meta name="description" content="Annabel Quach's personal website.">
        <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/devicon.min.css" />
        <script src="https://kit.fontawesome.com/810dc5760a.js" crossorigin="anonymous"></script>
    </head>
    <body class="z-1 m-0 h-full min-h-screen overflow-y-scroll bg-palette-700 bg-[url('/topography.svg')] pt-0 font-proto text-white">
        <div id="primary" class="z-2 m-auto grid min-h-screen w-11/12 px-8 pt-2 transition-all duration-300 lg:w-3/4" style="grid-template-rows: auto 1fr auto">
            <Header />
            <slot />
            <Footer />
        </div>
    </body>
</html>
